<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNum2"
            android:hint="Enter Integer" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp" android:layout_marginTop="141dp"
            app:layout_constraintStart_toEndOf="@+id/txtNum1" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPage2" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNum1"
            android:hint="Enter Integer" android:gravity="center"
            android:layout_marginTop="141dp"
            app:layout_constraintEnd_toStartOf="@+id/txtNum2" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPage2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp" android:layout_marginEnd="90dp" android:layout_marginRight="90dp"/>
    <Button
            android:text="Send  to Page 2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnPage2"
            app:layout_constraintTop_toBottomOf="@+id/txtNum1" android:layout_marginBottom="445dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp" android:layout_marginEnd="44dp" android:layout_marginRight="44dp"/>
    <TextView
            android:text="/"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:id="@+id/textView3" android:textSize="30sp" android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtNum2"/>
</android.support.constraint.ConstraintLayout>